<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="20250901-01-add-created-at" author="copilot">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="users" columnName="created_at"/>
            </not>
        </preConditions>
        <addColumn tableName="users">
            <column name="created_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20250901-02-add-updated-at" author="copilot">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="users" columnName="updated_at"/>
            </not>
        </preConditions>
        <addColumn tableName="users">
            <column name="updated_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </addColumn>
    </changeSet>

    <changeSet id="20250901-03-add-last-login" author="copilot">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="users" columnName="last_login"/>
            </not>
        </preConditions>
        <addColumn tableName="users">
            <column name="last_login" type="DATETIME"/>
        </addColumn>
    </changeSet>

        <changeSet id="20250903-01-fix-role-column-and-values" author="copilot">
        <comment>Convert role column from TINYINT to VARCHAR and update ordinal values to enum strings</comment>
        
        <!-- First, drop the existing check constraint -->
        <sql>
            ALTER TABLE users DROP CONSTRAINT users_chk_1;
        </sql>
        
        <!-- Then, modify the column type from TINYINT to VARCHAR -->
        <sql>
            ALTER TABLE users MODIFY COLUMN role VARCHAR(20);
        </sql>
        
        <!-- Update the data values from ordinals to strings -->
        <sql>
            UPDATE users SET role = 'CUSTOMER' WHERE role = '0';
        </sql>
        <sql>
            UPDATE users SET role = 'MERCHANT' WHERE role = '1';
        </sql>
        <sql>
            UPDATE users SET role = NULL WHERE role NOT IN ('CUSTOMER', 'MERCHANT');
        </sql>
        
        <!-- Add new constraint for enum values -->
        <sql>
            ALTER TABLE users ADD CONSTRAINT chk_role CHECK (role IN ('CUSTOMER', 'MERCHANT', 'ADMIN', 'MODERATOR') OR role IS NULL);
        </sql>
    </changeSet>

</databaseChangeLog>
